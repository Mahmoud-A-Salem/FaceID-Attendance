@using NewFaceIDAttendance.Models
@model Course
@{
    Layout = "_AdminLayout";
}

<h2 class="mb-3">Edit Course</h2>

<form method="post">
    @Html.HiddenFor(m => m.CourseId)
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Course Name</label>
        @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label class="form-label">Course Code</label>
        @Html.TextBoxFor(m => m.CourseCode, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label class="form-label">Year Level</label>
        @Html.TextBoxFor(m => m.YearLevel, new { @class = "form-control", type = "number" })
    </div>

    <div class="mb-3">
        <label class="form-label">Doctor</label>
        @Html.DropDownListFor(
            m => m.DoctorId,
            ViewBag.Doctors as SelectList,
            "Select Doctor",
            new { @class = "form-control" }
        )
    </div>

    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateModal">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    <!-- Update Modal -->
    <div class="modal fade" id="updateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Update</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to update this course?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes, Update</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
