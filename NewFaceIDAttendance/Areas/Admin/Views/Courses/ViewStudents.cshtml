@{
    Layout = "_AdminLayout";
    var course = ViewBag.Course as NewFaceIDAttendance.Models.Course;
    var enrolledStudents = ViewBag.EnrolledStudents as IEnumerable<dynamic>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Enrolled Students - @course?.CourseName</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Courses
        </a>
    </div>

    <!-- Enrolled Students Section -->
    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-people"></i> Enrolled Students
                @if (enrolledStudents != null && enrolledStudents.Any())
                {
                    <span class="badge bg-light text-dark ms-2">@enrolledStudents.Count() Students</span>
                }
            </h5>
        </div>
        <div class="card-body">
            @if (enrolledStudents != null && enrolledStudents.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Full Name</th>
                                <th>University ID</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Year Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 1; }
                            @foreach (var student in enrolledStudents)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <strong>@student.FullName</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@student.UniversityId</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(student.Email))
                                        {
                                            <a href="mailto:@student.Email">@student.Email</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>@(student.Department ?? "N/A")</td>
                                    <td>
                                        @if (student.YearLevel != null)
                                        {
                                            <span class="badge bg-info">Year @student.YearLevel</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        Total: <strong>@enrolledStudents.Count()</strong> student(s) enrolled in this course
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle"></i>
                    <strong>No students enrolled yet.</strong>
                    <p class="mb-0 mt-2">This course currently has no students enrolled. Students can be enrolled from the Admin/Students page using the "Enroll Courses" feature.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .card-header h5 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .table th {
        font-weight: 600;
        background-color: #f8f9fa;
    }
</style>
