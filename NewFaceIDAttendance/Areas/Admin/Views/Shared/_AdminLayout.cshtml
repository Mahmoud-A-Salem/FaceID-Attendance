<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-dark bg-dark navbar-expand-lg mb-4">
        <div class="container">
            <a class="navbar-brand">Admin Panel</a>
            <div class="navbar-nav">
                <a class="nav-link" asp-area="Admin" asp-controller="Doctors" asp-action="Index">Doctors</a>
                <a class="nav-link" asp-area="Admin" asp-controller="Students" asp-action="Index">Students</a>
                <a class="nav-link" asp-area="Admin" asp-controller="Courses" asp-action="Index">Courses</a>
            </div>
            <div class="ms-auto">
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mb-5">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-auto py-3 bg-light fixed-bottom">
        <div class="container text-center">
            &copy; 2025 - FaceID Attendance System - Admin Panel
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>