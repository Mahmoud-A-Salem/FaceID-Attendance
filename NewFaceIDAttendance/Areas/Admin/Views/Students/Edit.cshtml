@using NewFaceIDAttendance.ViewModels
@model StudentViewModel
@{
    Layout = "_AdminLayout";
}

<h2 class="mb-3">Edit Student</h2>

<form method="post" enctype="multipart/form-data">
    @Html.HiddenFor(m => m.StudentID)
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Full Name</label>
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label class="form-label">University ID</label>
        @Html.TextBoxFor(m => m.UniversityID, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label class="form-label">Department</label>
        @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label class="form-label">Year Level</label>
        @Html.TextBoxFor(m => m.YearLevel, new { @class = "form-control", type = "number" })
    </div>

    <div class="mb-3">
        <label class="form-label">Face Image</label>
        
        @if (Model.FaceImage != null && Model.FaceImage.Length > 0)
        {
            <div class="mb-2">
                <img src="data:image;base64,@Convert.ToBase64String(Model.FaceImage)" alt="Current Face Image" class="img-thumbnail" style="max-width: 200px;" />
                <p class="text-muted small">Current Image</p>
            </div>
        }
        
        <input type="file" name="FaceImageFile" class="form-control" />
        <span class="text-muted small">Leave empty to keep current image.</span>
    </div>

    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateModal">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    <!-- Update Modal -->
    <div class="modal fade" id="updateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Update</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to update this student?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes, Update</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
