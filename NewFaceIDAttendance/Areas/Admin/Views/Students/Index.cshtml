@using NewFaceIDAttendance.Models
@model IEnumerable<Student>
@{
    Layout = "_AdminLayout";
}

<h3>Students</h3>
<a class="btn btn-primary mb-3" asp-action="Create">Add New Student</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>University ID</th>
            <th>Department</th>
            <th>Year Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.Email</td>
                <td>@student.UniversityId</td>
                <td>@student.Department</td>
                <td>@student.YearLevel</td>
                <td>
                    <button class="btn btn-sm btn-warning" 
                            data-bs-toggle="modal" 
                            data-bs-target="#editModal"
                            onclick="setEditModal('@Url.Action("Edit", "Students", new { id = student.StudentId })', '@student.FullName')">
                        Edit
                    </button>
                    <button class="btn btn-sm btn-danger" 
                            data-bs-toggle="modal" 
                            data-bs-target="#deleteModal"
                            onclick="setDeleteModal('@Url.Action("Delete", "Students", new { id = student.StudentId })', '@student.FullName')">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Edit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to edit student <strong id="editName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="btnConfirmEdit" href="#" class="btn btn-primary">Yes, Edit</a>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete student <strong id="deleteName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="btnConfirmDelete" href="#" class="btn btn-danger">Yes, Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    function setEditModal(url, name) {
        document.getElementById('editName').innerText = name;
        document.getElementById('btnConfirmEdit').href = url;
    }
    
    function setDeleteModal(url, name) {
        document.getElementById('deleteName').innerText = name;
        document.getElementById('btnConfirmDelete').href = url;
    }
</script>
