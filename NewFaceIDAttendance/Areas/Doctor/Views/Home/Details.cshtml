@model NewFaceIDAttendance.Areas.Doctor.ViewModels.CourseDetailsViewModel

@{
    ViewData["Title"] = @Model.CourseName;
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.CourseCode</li>
            </ol>
        </nav>
        <h2 class="fw-bold text-dark">@Model.CourseName (@Model.CourseCode)</h2>
    </div>
</div>

<div class="row mb-4 g-3">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="text-muted text-uppercase mb-2">Total Students</h6>
                <div class="fs-4 fw-bold text-primary">@Model.Students.Count</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="text-muted text-uppercase mb-2">Total Sessions</h6>
                 <div class="fs-4 fw-bold text-info">@Model.TotalSessions</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="text-muted text-uppercase mb-2">Average Attendance</h6>
                @{
                    var avgAttendance = Model.Students.Any() ? Math.Round(Model.Students.Average(s => s.AttendancePercentage), 1) : 0;
                    var colorClass = avgAttendance >= 75 ? "text-success" : (avgAttendance >= 50 ? "text-warning" : "text-danger");
                }
                <div class="fs-4 fw-bold @colorClass">@avgAttendance%</div>
            </div>
        </div>
    </div>
</div>

<!-- Students List -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold"><i class="fas fa-users me-2"></i>Enrolled Students</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="ps-4">Name</th>
                    <th>University ID</th>
                    <th class="text-center">Attendance %</th>
                    <th class="text-center">Status</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@student.StudentName</td>
                        <td>@student.UniversityId</td>
                        <td class="text-center">
                            <div class="d-flex align-items-center justify-content-center">
                                <span class="me-2 text-muted small">@student.PresentCount / @Model.TotalSessions</span>
                                <div class="progress" style="width: 80px; height: 6px;">
                                    @{
                                        var barColor = student.AttendancePercentage >= 75 ? "bg-success" : (student.AttendancePercentage >= 50 ? "bg-warning" : "bg-danger");
                                    }
                                    <div class="progress-bar @barColor" role="progressbar" style="width: @student.AttendancePercentage%" aria-valuenow="@student.AttendancePercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="ms-2 small fw-bold">@student.AttendancePercentage%</span>
                            </div>
                        </td>
                        <td class="text-center">
                            @if (student.AttendancePercentage >= 75)
                            {
                                <span class="badge bg-soft-success text-success rounded-pill px-3">Great</span>
                            }
                            else if (student.AttendancePercentage >= 50)
                            {
                                <span class="badge bg-soft-warning text-warning rounded-pill px-3">Warning</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-danger text-danger rounded-pill px-3">Critical</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <!-- Placeholder for student specific history -->
                            <button class="btn btn-sm btn-light text-muted" title="View History"><i class="fas fa-history"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .bg-soft-success { background-color: rgba(25, 135, 84, 0.1); }
    .bg-soft-warning { background-color: rgba(255, 193, 7, 0.1); }
    .bg-soft-danger { background-color: rgba(220, 53, 69, 0.1); }
</style>
