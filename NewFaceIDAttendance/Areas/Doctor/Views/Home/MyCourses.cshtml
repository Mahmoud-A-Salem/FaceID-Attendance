@model IEnumerable<NewFaceIDAttendance.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark">My Courses</h2>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Course Code</th>
                        <th class="py-3">Course Name</th>
                        <th class="text-center py-3">Enrolled Students</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var course in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@course.CourseCode</td>
                                <td>@course.CourseName</td>
                                <td class="text-center">
                                    <span class="badge bg-soft-primary text-primary rounded-pill px-3">
                                        @(course.StudentCourses?.Count ?? 0)
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fas fa-book-open fa-3x mb-3 d-block opacity-25"></i>
                                No courses assigned yet.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary { background-color: rgba(13, 110, 253, 0.1); }
</style>
