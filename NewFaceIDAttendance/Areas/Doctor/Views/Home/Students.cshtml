@model IEnumerable<NewFaceIDAttendance.Models.Student>

@{
    ViewData["Title"] = "My Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark">My Students</h2>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Student Name</th>
                        <th class="py-3">University ID</th>
                        <th class="py-3">Email</th>
                        <th class="py-3">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <span class="text-primary fw-bold">@student.FullName.Substring(0, 1).ToUpper()</span>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">@student.FullName</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>@student.UniversityId</td>
                                <td>@student.Email</td>
                                <td>@(string.IsNullOrEmpty(student.Phone) ? "-" : student.Phone)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-user-graduate fa-3x mb-3 d-block opacity-25"></i>
                                No students found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
