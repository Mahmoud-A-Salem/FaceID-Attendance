@model NewFaceIDAttendance.ViewModels.CreateSessionViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Session";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Create New Session
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">
                                <i class="fas fa-book me-1"></i>Course
                            </label>
                            <select asp-for="CourseId" asp-items="Model.Courses" class="form-select">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SessionName" class="form-label">
                                <i class="fas fa-tag me-1"></i>Session Name
                            </label>
                            <input asp-for="SessionName" class="form-control" 
                                   placeholder="e.g., Lecture 1, Lab Session, Quiz" />
                            <span asp-validation-for="SessionName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartTime" class="form-label">
                                    <i class="fas fa-clock me-1"></i>Start Time
                                </label>
                                <input asp-for="StartTime" type="time" class="form-control" step="60" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Format: HH:MM (24-hour)
                                </small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DurationMinutes" class="form-label">
                                    <i class="fas fa-hourglass-half me-1"></i>Duration (Minutes)
                                </label>
                                <input asp-for="DurationMinutes" type="number" class="form-control" 
                                       min="5" max="1440" />
                                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Link will be valid for this duration after start time
                                </small>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> A unique link will be generated for this session. 
                            Students can use this link to mark their attendance within the specified time window.
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-1"></i>Create Session
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Set default start time to current time (HH:mm format)
        document.addEventListener('DOMContentLoaded', function() {
            const startTimeInput = document.querySelector('input[name="StartTime"]');
            if (!startTimeInput.value) {
                const now = new Date();
                const hours = String(now.getHours()).padStart(2, '0');
                const minutes = String(now.getMinutes()).padStart(2, '0');
                startTimeInput.value = `${hours}:${minutes}`;
            }
        });
    </script>
}
