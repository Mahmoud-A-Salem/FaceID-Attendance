@model IEnumerable<NewFaceIDAttendance.ViewModels.SessionViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Sessions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clock me-2"></i>My Sessions</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Session
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>No sessions found.</strong> Create your first session to get started!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Course</th>
                        <th>Session Name</th>
                        <th>Start Time</th>
                        <th>Expiry Time</th>
                        <th>Status</th>
                        <th>Attendance</th>
                        <th>Session Link</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var session in Model)
                    {
                        <tr>
                            <td>
                                <strong>@session.CourseCode</strong><br/>
                                <small class="text-muted">@session.CourseName</small>
                            </td>
                            <td>@session.SessionName</td>
                            <td>@session.StartTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td>@session.ExpiryTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td>
                                @if (session.Status == "Active")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-circle-notch fa-spin me-1"></i>Active
                                    </span>
                                }
                                else if (session.Status == "Scheduled")
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-clock me-1"></i>Scheduled
                                    </span>
                                }
                                else if (session.Status == "Expired")
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-times-circle me-1"></i>Expired
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-pause-circle me-1"></i>Inactive
                                    </span>
                                }
                            </td>
                            <td>
                                <a asp-action="ViewAttendance" asp-route-id="@session.SessionId" 
                                   class="text-decoration-none">
                                    <i class="fas fa-users me-1"></i>@session.AttendanceCount
                                </a>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary copy-link" 
                                        data-link="@session.SessionLink"
                                        title="Copy link">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@session.SessionId" 
                                   class="btn btn-sm btn-warning"
                                   title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-sm btn-danger delete-session" 
                                        data-id="@session.SessionId"
                                        data-name="@session.SessionName"
                                        title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete session <strong id="sessionName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Copy link functionality
        document.querySelectorAll('.copy-link').forEach(button => {
            button.addEventListener('click', function() {
                const link = this.getAttribute('data-link');
                navigator.clipboard.writeText(link).then(() => {
                    const originalHTML = this.innerHTML;
                    this.innerHTML = '<i class="fas fa-check"></i>';
                    setTimeout(() => {
                        this.innerHTML = originalHTML;
                    }, 2000);
                });
            });
        });

        // Delete confirmation
        document.querySelectorAll('.delete-session').forEach(button => {
            button.addEventListener('click', function() {
                const sessionId = this.getAttribute('data-id');
                const sessionName = this.getAttribute('data-name');
                
                document.getElementById('sessionName').textContent = sessionName;
                document.getElementById('deleteForm').action = '@Url.Action("Delete", "Sessions")/' + sessionId;
                
                const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
                modal.show();
            });
        });
    </script>
}
