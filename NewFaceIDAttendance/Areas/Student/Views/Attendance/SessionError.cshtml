@{
    ViewData["Title"] = "Session Error";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-times-circle me-2"></i>@ViewBag.ErrorTitle
                    </h4>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                    <p class="lead">@ViewBag.ErrorMessage</p>

                    @if (ViewBag.CourseName != null)
                    {
                        <p class="text-muted">Course: <strong>@ViewBag.CourseName</strong></p>
                    }

                    @if (ViewBag.StartTime != null)
                    {
                        <p class="text-muted">Start Time: <strong>@((DateTime)ViewBag.StartTime).ToString("MMM dd, yyyy hh:mm tt")</strong></p>
                    }

                    <hr/>

                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>Go to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
