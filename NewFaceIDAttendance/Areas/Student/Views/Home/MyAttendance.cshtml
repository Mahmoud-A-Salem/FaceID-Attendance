@model NewFaceIDAttendance.ViewModels.StudentAttendanceViewModel
@{
    ViewData["Title"] = "My Attendance";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clipboard-check me-2"></i>My Attendance History</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="text-primary">@Model.AttendanceStats["Total"]</h3>
                    <p class="mb-0"><i class="fas fa-clipboard-list me-1"></i>Total Attendance</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="text-success">@Model.AttendanceStats["Present"]</h3>
                    <p class="mb-0"><i class="fas fa-check-circle me-1"></i>Marked Present</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="text-info">@Model.AttendanceStats["FaceRecognized"]</h3>
                    <p class="mb-0"><i class="fas fa-user-check me-1"></i>Face Recognized</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Records -->
    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Attendance Records</h5>
        </div>
        <div class="card-body">
            @if (!Model.Attendances.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    No attendance records found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Course</th>
                                <th>Session</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th>Face Recognized</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 1; }
                            @foreach (var attendance in Model.Attendances)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <span class="badge bg-primary">@attendance.CourseCode</span>
                                        <br/>
                                        <small>@attendance.CourseName</small>
                                    </td>
                                    <td>
                                        @if (attendance.SessionName != null)
                                        {
                                            <span>@attendance.SessionName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>@attendance.AttendanceDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (attendance.CreatedAt != null)
                                        {
                                            @attendance.CreatedAt.Value.ToString("hh:mm tt")
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (attendance.Status == "Present")
                                        {
                                            <span class="badge bg-success">Present</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@attendance.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (attendance.FaceRecognized)
                                        {
                                            <span class="text-success">
                                                <i class="fas fa-check-circle"></i> Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-times-circle"></i> No
                                            </span>
                                        }
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
