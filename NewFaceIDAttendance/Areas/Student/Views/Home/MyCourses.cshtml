@model IEnumerable<NewFaceIDAttendance.ViewModels.CourseInfo>
@{
    ViewData["Title"] = "My Courses";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-book me-2"></i>My Courses</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            You are not enrolled in any courses yet. Please contact your administrator.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <span class="badge bg-light text-dark">@course.CourseCode</span>
                                @course.CourseName
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong><i class="fas fa-user-tie me-1"></i>Doctor:</strong>
                                <p class="mb-0">@(course.DoctorName ?? "Not Assigned")</p>
                            </div>

                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <h4 class="text-primary mb-0">@course.TotalSessions</h4>
                                        <small class="text-muted">Total Sessions</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <h4 class="text-success mb-0">@course.AttendedSessions</h4>
                                        <small class="text-muted">Attended</small>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-2">
                                <strong>Attendance Rate:</strong>
                                <div class="progress" style="height: 25px;">
                                    @if (course.AttendancePercentage >= 75)
                                    {
                                        <div class="progress-bar bg-success" style="width: @course.AttendancePercentage%">
                                            @course.AttendancePercentage%
                                        </div>
                                    }
                                    else if (course.AttendancePercentage >= 50)
                                    {
                                        <div class="progress-bar bg-warning" style="width: @course.AttendancePercentage%">
                                            @course.AttendancePercentage%
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="progress-bar bg-danger" style="width: @course.AttendancePercentage%">
                                            @course.AttendancePercentage%
                                        </div>
                                    }
                                </div>
                            </div>

                            @if (course.AttendancePercentage < 75)
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    <small>Attendance below 75%</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
