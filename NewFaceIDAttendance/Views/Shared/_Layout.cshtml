<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FaceID Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="flex-grow-1 d-flex flex-column">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="/">FaceID Attendance</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            @if (Context.Session.GetString("UserRole") != null)
                            {
                                <li class="nav-item">
                                    <span class="nav-link">Hello, @Context.Session.GetString("Email")</span>
                                </li>

                                if (Context.Session.GetString("UserRole") == "Admin")
                                {
                                    <li class="nav-item"><a class="nav-link" href="/Admin/Doctors">Doctors</a></li>
                                    <li class="nav-item"><a class="nav-link" href="/Admin/Students">Students</a></li>
                                    <li class="nav-item"><a class="nav-link" href="/Admin/Courses">Courses</a></li>
                                }
                                else if (Context.Session.GetString("UserRole") == "Doctor")
                                {
                                    <li class="nav-item"><a class="nav-link" href="/Admin/Courses">Courses</a></li>
                                }
                                else if (Context.Session.GetString("UserRole") == "Student")
                                {
                                    <li class="nav-item"><a class="nav-link" href="/Admin/Courses">Courses</a></li>
                                }

                                <li class="nav-item">
                                    <a class="nav-link" href="/Home/Logout">Logout</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container mt-4 flex-grow-1">
            @RenderBody()
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        &copy; @DateTime.Now.Year - FaceID Attendance System
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
